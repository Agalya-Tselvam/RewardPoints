<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">reward_form.reward_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Rule Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Riverstone\RewardPoints\Block\Adminhtml\Edit\Button\SaveButton"/>
            <button name="back" class="Riverstone\RewardPoints\Block\Adminhtml\Edit\Button\BackButton"/>
            <button name="save_and_continue"
                    class="Riverstone\RewardPoints\Block\Adminhtml\Edit\Button\SaveAndContinueButton"/>
            <button name="delete" class="Riverstone\RewardPoints\Block\Adminhtml\Edit\Button\DeleteButton"/>
        </buttons>
        <namespace>reward_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>reward_form.reward_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="reward_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="reward/index/save"/>
        </settings>
        <dataProvider class="Riverstone\RewardPoints\Model\RewardPoints\DataProvider" name="reward_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>Rule Information</label>
        </settings>

        <field name="rule_name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Rule Name</label>
                <dataScope>rule_name</dataScope>
            </settings>
        </field>

        <field name="description" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="active" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
                <dataScope>active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="websites" sortOrder="40" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">websites</label>
                <dataScope>websites</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\CatalogRule\Model\Rule\WebsitesOptionsProvider"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="customer_group" sortOrder="50" formElement="multiselect">
            <settings>
                <label translate="true">Customer Group</label>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Customer\Model\Customer\Source\GroupSourceInterface"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>

        <field name="rule_from" sortOrder="60" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Rule From</label>
                <dataScope>rule_from</dataScope>
            </settings>
        </field>
        <field name="rule_to" sortOrder="70" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Rule To</label>
                <dataScope>rule_to</dataScope>
            </settings>
        </field>

        <field name="priority" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
            </settings>
        </field>
        <field name="allow_notification" sortOrder="90" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Allow Notification</label>
                <dataScope>allow_notification</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="personal_email_template" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Riverstone\RewardPoints\Model\Source\EmailTemplate</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Personal Email Template</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </field>
        <field name="rss_feed" sortOrder="110" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Public In RSS Feed</label>
                <dataScope>rss_feed</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="actions">
        <settings>
            <label>Actions</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="event" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Riverstone\RewardPoints\Model\Source\CustomOptions</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Event</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </field>
        <field name="give_points" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Riverstone\RewardPoints\Model\Source\GivePoints</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Give Points</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </field>
        <field name="calculation_type" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Riverstone\RewardPoints\Model\Source\CalculationType</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Calculation Type</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </field>
        <field name="points_amount" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Points Amoun(Get X Points)t</label>
                <dataScope>points_amount</dataScope>
            </settings>
        </field>
        <field name="stop_rules_processing" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Stop Rules Processing</label>
                <dataScope>stop_rules_processing</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <container name="actions_apply_to" sortOrder="60">
            <htmlContent name="html_content">
                <block name="actions_apply_to" class="Riverstone\RewardPoints\Block\Adminhtml\Rule\Earn\Edit\Tab\Actions"/>
            </htmlContent>
        </container>

    </fieldset>
    <fieldset name="conditions" sortOrder="20">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Conditions</label>
        </settings>
        <container name="conditions_apply_to" sortOrder="10">
            <htmlContent name="html_content">
                <block name="conditions_apply_to" class="Riverstone\RewardPoints\Block\Adminhtml\Rule\Earn\Edit\Tab\Conditions"/>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="labels">
        <settings>
            <label>Labels</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="labels" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rule</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Default Rule Label for All Store Views</label>
                <dataScope>labels</dataScope>
            </settings>
        </field>
    </fieldset>

</form>
